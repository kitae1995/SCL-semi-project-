<!--  <select id="getTotal" resultType="int">
		SELECT COUNT(*)
		FROM place
		<include refid="search" />
		
	  </select> -->
	
	<select id="getTotal" resultType="int">
		SELECT COUNT(*)
		FROM place2
		<include refid="search" />
		
	</select>
	
	<select id="getList" resultType="place">
		SELECT * FROM
			(
			SELECT ROWNUM AS rn, tbl.*
				FROM
				(
				SELECT * FROM place
				<include refid="search" />
				ORDER BY bno DESC
				) tbl
			)
		<!-- 
			CDATA: Character Data의 약자로, 마크업 언어에서 문자열 데이터를 표기하기 위한 문법입니다.
			특수 문자 등을 태그가 아니라 순수한 문자로 표기하고 싶을 때 사용하는 태그입니다.
		 -->	
		<![CDATA[
		WHERE rn > #{pageStart}
		AND rn <= #{pageEnd}
		]]>
	</select>
	
	<select id="getList2" resultType="place2">
		SELECT * FROM
			(
			SELECT ROWNUM AS rn, tbl.*
				FROM
				(
				SELECT * FROM place2
				<include refid="search" />
				ORDER BY bno DESC
				) tbl
			)
		<!-- 
			CDATA: Character Data의 약자로, 마크업 언어에서 문자열 데이터를 표기하기 위한 문법입니다.
			특수 문자 등을 태그가 아니라 순수한 문자로 표기하고 싶을 때 사용하는 태그입니다.
		 -->	
		<![CDATA[
		WHERE rn > #{pageStart}
		AND rn <= #{pageEnd}
		]]>
	</select>
	
<!--  <delete id="delete">
		DELETE FROM place
		WHERE bno = #{bno}
	  </delete> -->
	
	<delete id="delete">
		DELETE FROM place2
		WHERE bno = #{bno}
	</delete>
	
	
</mapper>

















